<%- include("partials/header") %> 

<div class="container">
    <div id="messages-container" class="m-5">
        <div id="chat-container">
            <% history.messages.forEach((message) => { %>
                <% if (message.isSentByYou) { %> 

                    <div class="your-message message m-2">
                        <h5><%= message.text %></h5>
                    </div>

                <% } else { %>

                    <div class="their-message message m-2">
                        <h5><%= message.text %></h5>
                    </div>

            <% }}) %>
        </div>
        <div id="options-container" class="mt-3">
            <form action="/" method="POST">
                <input type="text" class="form-control m-2" name="send" id="send" placeholder="Say something!">
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
            <form class="mt-2" action="/" method="POST">
                <input type="text" class="form-control m-2" name="join" id="join">
                <button type="submit" class="btn btn-primary">Join</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/index.js"></script>

<%- include("partials/footer") %> 